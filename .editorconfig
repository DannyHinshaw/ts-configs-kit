[*]
charset=utf-8
end_of_line=lf
insert_final_newline=false
indent_style=space
indent_size=4

[{*.ng,*.sht,*.html,*.shtm,*.shtml,*.htm}]
indent_style=tab
tab_width=2

[{.babelrc,.prettierrc,.stylelintrc,.eslintrc,jest.config,*.json,*.jsb3,*.jsb2,*.bowerrc}]
indent_style=space
indent_size=2

[*.scss]
indent_style=space
indent_size=2

[{*.js,*.cjs}]
indent_style=tab
tab_width=2

[{filters,*.ats,*.ts}]
indent_style=tab
tab_width=2

[*.tsx]
indent_style=tab
tab_width=2

[{*.es6,*.mjs}]
indent_style=tab
tab_width=2

[*.jsx]
indent_style=tab
tab_width=2

[{jshint.json,*.jshintrc}]
indent_style=space
indent_size=2

[{tsconfig.lib.json,tsconfig.spec.json,tsconfig.app.json,tsconfig.json,tsconfig.e2e.json}]
indent_style=space
indent_size=2

[*.js.map]
indent_style=space
indent_size=2

[{.analysis_options,*.yml,*.yaml}]
indent_style=space
indent_size=2
